<Page x:Class="WmsDesktop.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WmsDesktop.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomePage">

    <!--<Page.DataContext>
        <local:HomePageViewModel/>
    </Page.DataContext> -->
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="{Binding WidthSideBar}"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" Background="{StaticResource TitleColorBrush}">
            <StackPanel>
                <Button Command="{Binding closePage}" Style="{StaticResource CloseHomePage}"></Button>
            </StackPanel>
        </Grid>
        <StackPanel Grid.Column="1" Background="White">
            <Button Command="{Binding callCreateCatalogItemPage}" Margin="5" Width="105">Добавить каталог</Button>
            <Button Command="{Binding callAddingPage}" Margin="5" Width="105">Создать заявку</Button>
        </StackPanel>
    </Grid>
</Page>
