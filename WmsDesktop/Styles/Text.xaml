<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:WmsDesktop"
                    >
    <Style TargetType="{x:Type Label}" x:Key="TitleMenuItem..">
        <Setter Property="Background" Value="{StaticResource TitleColorBrush}"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="Padding" Value="5 0 5 0"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource TitleMenuOverBrush}"/>
            </Trigger>
        </Style.Triggers>
        
    </Style>

    
</ResourceDictionary>