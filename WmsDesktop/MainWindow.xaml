<Window x:Class="WmsDesktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:local="clr-namespace:WmsDesktop"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Loaded="Window_Loaded" Margin="10">

    <Window.Resources>

        <local:ZeroToVisibilityConverter x:Key="ZeroToVisibilityConverter" />
        <local:CatalogToBackgroundColorConverter x:Key="CatalogToBackgroundColorConverter"/>
    </Window.Resources>
    <WindowChrome.WindowChrome>
        <WindowChrome 
            CaptionHeight="30" 
            CornerRadius="0" 
            GlassFrameThickness="0" 
            ResizeBorderThickness="5"/>
    </WindowChrome.WindowChrome>
    

    <Grid   x:Name="Main">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="{Binding TitleHeight, FallbackValue=30}"/>
            <RowDefinition Height="{Binding MenuTitleHeight, FallbackValue=30}"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
       
        <Border 
            Padding="{Binding TitlePadding}"
                Grid.Row="0" Grid.ColumnSpan="2" 
                Background="{StaticResource TitleColorBrush}" Height="{Binding TitleHeight, FallbackValue=30}" VerticalAlignment="Top">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" >
                <Button Command="{Binding collapseWindow}" Style="{StaticResource WindowControlButton}">_</Button>
                <Button Command="{Binding expandWindow}" Style="{StaticResource WindowControlButton}">[]</Button>
                <Button Margin="{Binding MarginClosedButton}" Command="{Binding closeWindow}" Style="{StaticResource WindowCloseButton}">X</Button>
            </StackPanel>
        </Border>
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" 
                Grid.Column="0" Grid.ColumnSpan="2"
                Grid.Row="1" Grid.RowSpan="2"
                Content="{Binding HomePage}"/>
        <Border Panel.ZIndex="-1" Grid.Row="1" Grid.ColumnSpan="2"
                Padding="{Binding TitleMenuPadding}"
                Height="{Binding MenuTitleHeight}" >
            <StackPanel  x:Name="containerMenuItem"
                        Orientation="Horizontal" 
                        Height="{Binding MenuTitleHeight}" 
                        Background="{StaticResource TitleColorBrush}"
                       >
                <Button 
                     Style="{StaticResource TitleMenuItem}"
                    Command="{Binding callHomeWindow}"
                     Content="Home"
                     />
                <ItemsControl  ItemsSource="{Binding MenuItems}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Command="{Binding DataContext.selectMenuItem, RelativeSource={RelativeSource AncestorType=Window}}"
                                    CommandParameter="{Binding}"
                                    Style="{StaticResource TitleMenuItem}" 
                                    Content="{Binding Title}"
                                    >
                                 
                                
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
               
            </StackPanel>
        </Border>
        <Grid Visibility="Collapsed" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" >
                    
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                  
                    <Grid Visibility="Visible" 
                          Grid.Row="1" 
                          Background="AliceBlue"
                          Margin="10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="{Binding BarWidhtLength, FallbackValue=150}"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TabControl Padding="10"
                                             Grid.Column="1">
                            <TabItem  x:Name="Adding" 
                                 Header="Добавление заказа"
                                     >
                                <ScrollViewer x:Name="SWCreatingAssembly" Visibility="Visible">
                                    <StackPanel>
                                        <StackPanel 
                                        Visibility="{Binding Items.Count, Converter={StaticResource ZeroToVisibilityConverter}}"
                                        x:Name="GridContainer"
                                        >
                                            <RadioButton Command="{Binding selectAtomy}" IsChecked="True">Atomy</RadioButton>
                                            <RadioButton Command="{Binding selectBork}" x:Name="radioBork" >Bork</RadioButton>

                                            <WrapPanel
                                            Height="{Binding ElementName=GridContainer, Path=ActualHeight}"
                                            Name="PanelDnD"
                                            DragDrop.Drop="WrapPanel_Drop"
                                            AllowDrop="True"
                                            Background="LightBlue">
                                            </WrapPanel>
                                        </StackPanel>
                                        <Grid  >
                                            <Grid.RowDefinitions>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                            </Grid.RowDefinitions>
                                            <ItemsControl Grid.Row="0" ItemsSource="{Binding Items}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border CornerRadius="15" >
                                                            <Grid Margin="10" Background="{Binding Catalog, Converter={StaticResource CatalogToBackgroundColorConverter}}">
                                                                <i:Interaction.Triggers>
                                                                    <i:EventTrigger EventName="MouseLeftButtonDown">
                                                                        <i:InvokeCommandAction 
                                                                            Command="{Binding DataContext.callBorkDialog, 
                                                                                      RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                                            CommandParameter="{Binding}" />
                                                                    </i:EventTrigger>
                                                                </i:Interaction.Triggers>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="3*"/>
                                                                    <ColumnDefinition Width="2*"/>
                                                                    <ColumnDefinition Width="*"/>
                                                                </Grid.ColumnDefinitions>
                                                                <TextBlock Padding="10" Text="{Binding Left}" Grid.Column="0"></TextBlock>
                                                                <TextBlock Padding="10" Text="{Binding Center}" Grid.Column="1"></TextBlock>
                                                                <TextBlock Padding="10" Text="{Binding Right}" Grid.Column="2" HorizontalAlignment="Right"></TextBlock>
                                                            </Grid>
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
                                                <Button Command="{Binding createSession}" Padding="10" Margin="10">Создать</Button>
                                                <Button Command="{Binding clearItems}" Padding="10" Margin="10">Отменить</Button>
                                            </StackPanel>
                                        </Grid>
                                    </StackPanel>
                                </ScrollViewer>
                            </TabItem>
                            <TabItem Header="Добавить товар">
                                <StackPanel Orientation="Horizontal">
                                    <StackPanel
                                    Width="200"
                                    >
                                        <StackPanel 
                                        Margin="5"
                                        Orientation="Horizontal">
                                            <TextBlock Margin="5">Имя</TextBlock>
                                            <TextBox x:Name="tbName" Width="150"></TextBox>
                                        </StackPanel>
                                        <StackPanel  Margin="5"
                                        Orientation="Horizontal">
                                            <TextBlock Margin="5"> ШК</TextBlock>
                                            <TextBox x:Name="tbBarcode" Width="150"></TextBox>
                                        </StackPanel>
                                        <Button x:Name="btnCatalogBorkAdd" 
                                            Height="30" 
                                            Width="120"
                                            Click="btnCatalogBorkAdd_Click">Добавить</Button>
                                        <TextBlock x:Name="tbError"></TextBlock>
                                    </StackPanel>
                                    <StackPanel>

                                        <StackPanel Orientation="Horizontal">
                                            <TextBox x:Name="textBoxSearhc" TextChanged="textBoxSearhc_TextChanged" 
                                            Padding="5"
                                            Margin="5"
                                            Width="200"></TextBox>

                                        </StackPanel>
                                        <ListBox
                                            Width="600" 
                                            Height="380"
                                            ScrollViewer.VerticalScrollBarVisibility="Auto" 
                                                                x:Name="listItems"
                                                                SelectionChanged="listItems_SelectionChanged">

                                        </ListBox>
                                    </StackPanel>
                                </StackPanel>
                            </TabItem>
                        </TabControl>
                    </Grid>
    
                </Grid>
            
        </Grid>
    
</Window>
