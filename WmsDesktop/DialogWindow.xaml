<Window x:Class="WmsDesktop.DialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WmsDesktop"
        mc:Ignorable="d"
        Title="DialogWindow" Height="450" Width="800">
    <StackPanel>

        <StackPanel Orientation="Horizontal">
            <TextBox x:Name="textBox" TextChanged="textBox_TextChanged"
                Padding="5"
                Margin="5"
                Width="200"></TextBox>
            <Button Margin="5">Искать</Button>
            <Button x:Name="btnSelect" 
                    Margin="5"
                    Click="btnSelect_Click"
                    >Выбрать</Button>
        </StackPanel>
            <ListBox
                Width="600" 
                Height="380"
                ScrollViewer.VerticalScrollBarVisibility="Auto" x:Name="listItems">
            </ListBox>
    </StackPanel>
</Window>
